<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="Curse" table="team">
        <id name="int_id" type="int" length="10">
            <column name="ID" />
        </id>

        <property name="str_mname" type="string">
            <column name="Nombre" length="20" not-null="true" />
        </property>
        <property name="str_mfirst_characteristic" type="string">
            <column name="CaracteristicaUno" length="100" not-null="true" />
        </property>
        <property name="str_msecond_characteristic" type="string">
            <column name="CaracteristicaDos" length="100" not-null="true" />
        </property>
        <property name="str_mthird_characteristic" type="string">
            <column name="CaracteristicaTres" length="100" not-null="true" />
        </property>
    </class>

</hibernate-mapping>